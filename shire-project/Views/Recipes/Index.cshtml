@model shire_project.Models.Recipes
@{
    //TODO: Create simple view that has a form and table to add recipes to the DB and show a recipe from the DB.
}

<div>
    <h2>Recipes</h2>
    <h3>Current Recipe</h3>
    <table>
        <tr>
            <th>
                <span>Recipe Name</span>
            </th>
            <th>
                <span>Recipe ID</span>
            </th>
        </tr>
        <tr>
            <td>
                <span>@Model.Name</span>
            </td>
            <td>
                <span>@Model.ID</span>
            </td>
        </tr>


    </table>

    <h3> Add Recipe </h3>
    <div>
    @using (Html.BeginForm("ServeRecipe", "Recipes", FormMethod.Post))
            {
                <span>@Html.Label("Recipe Name: ")@Html.EditorFor(m => m.Name)</span>
                <span>@Html.Label("Recipe ID  : ")@Html.EditorFor(m => m.ID)</span>

                <input id="Submit" type="submit" value="submit"/>
                
            }
    </div>
</div>
