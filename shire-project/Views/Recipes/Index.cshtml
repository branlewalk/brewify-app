@model shire_project.Models.Recipe
@{}

<div>
    <h2>Recipes</h2>
    <h3>Current Recipe</h3>
    <table>
        <tr>
            <th>
                <span>Recipe Name</span>
            </th>
            <th>
                <span>Recipe ID</span>
            </th>
        </tr>
        <tr>
            <td>
                <span>@Model.Name</span>
            </td>
            <td>
                <span>@Model.RecipeID</span>
            </td>
        </tr>


    </table>

    <h3> Add Recipe </h3>
    <div>
    @using (Html.BeginForm("ServeRecipe", "Recipe", FormMethod.Post))
            {
                <span>@Html.Label("Recipe Name: ")@Html.EditorFor(m => m.Name)</span>

                <input id="Submit" type="submit" value="submit"/>
                
            }
    </div>
</div>
